<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userSQL">
	<!-- id중복 체크 -->
	<select id="isExistId" parameterType="String" resultType="user">
		select * from usertable where id=#{id}
	</select>
	
	<!-- write -->
	<insert id="write" parameterType="user">
		insert into usertable values(#{name}, #{id}, #{pwd})
	</insert>
	
<!-- 	<select id="getUserList" parameterType="String" resultType="user">
		select * from usertable
	</select> -->
	
	<select id="getUserList" parameterType="java.util.Map" resultType="user">
		select * from usertable limit #{startNum}, #{endNum}
	</select>
	
	<select id="getTotalA" resultType="int"> select count(*) from usertable </select>
	
	<!-- 한사람의 정보를 가져오기 -->
	<select id="getUser" parameterType="String" resultType="user">
		select * from usertable where id=#{id}
	</select>
	
	<!-- 회원정보수정 -->
	<update id="update" parameterType="user">
		update usertable set name=#{name}
						, pwd=#{pwd}
				where id=#{id}
	</update>
	
	<delete id="delete" parameterType="String">
		delete from usertable where id=#{id}
	</delete>
</mapper>